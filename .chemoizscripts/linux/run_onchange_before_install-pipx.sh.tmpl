{{ if eq .osid "linux-debian" "linux-raspbian" "linux-ubuntu" -}}

{{ $packages := list
  "py-spy"
  "hatch" -}}

{{ if and (not .ephemeral) (not .headless) }}
  {{ $packages = concat $packages (list
    "histoprint"
    "jrnl"
    "rename"
    "ruff-lsp") -}}
{{ end }}

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
  {{   $sudo = "" -}}
{{ end -}}

#!/usr/bin/sh

{{ if not findExecutable "pipx" (list "bin" ".local/bin") }}
  {{ $sudo }}apt install -y pipx
{{ end }}

{{ range $packages }}
  {{ $sudo }}pipx install -y {{ . }}
{{ end }}

{{ end }}
